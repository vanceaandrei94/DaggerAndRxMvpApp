<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.example.andreivancea.daggerandrxmvpapp.activities.main.MainActivity">

    <EditText
        android:id="@+id/edit_posts_number"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:hint="Post Number(1-100)" />

    <Button
        android:id="@+id/btn_get_all_posts_btn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Get All Posts" />

    <Button
        android:id="@+id/btn_get_selected_post_btn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Get Chosen Post" />
</LinearLayout>
